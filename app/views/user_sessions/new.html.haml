%h1 Login
 
- form_for @user_session, :url => user_session_path do |f|
  = f.error_messages
  
  = f.label :login
  = f.text_field :login
  %br
  = f.label :password
  = f.password_field :password
  %br
  %button{:type => 'submit'}
    Login
  %ul.forgot_password
    %li 
      |
    %li
      = link_to "Forgot Password?", new_password_reset_path