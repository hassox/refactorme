<?xml version="1.0" encoding="UTF-8"?>
%feed{:version => "2.0", "xmlns:atom"=>"http://www.w3.org/2005/Atom"}
  %channel
    %link http://www.refactorme.com
    %atom:link{:type=>"application/rss+xml", :href=>"http://www.refactorme.com/rss.xml", :rel=>"self"}
    %title RefactorMe
    %description RefactorMe
    %language en-us
 
    - @snippets.each do |snippet|
      %entry
        %updated= snippet.displayed_on
        %link{:href => "#{display_snippet_url(snippet.displayed_on.year, snippet.displayed_on.month, snippet.displayed_on.day)}" }
        %id= snippet.id
        %author= snippet.user.login
        %title= snippet.title
        %summary= snippet.context