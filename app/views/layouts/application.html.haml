!!!Strict
%html
  %head
    %title Refactor Me
    = javascript_include_tag 'jquery', 'application', :cache => true
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen'
  %body
    .container
      #header
        %h1
          %a{ :href => root_url }
            RefactorMe
        %ul.navigation
          %li= link_to "main", root_url
          %li= link_to "submit", submit_snippet_url
          %li= link_to "login", login_url

      #content
        - [ :error, :success, :notice ].each do |type|
          - if flash[type]
            %div{:class => type }= flash[type]

        = yield
      #footer
        %ul.admin-panel
          %li= link_to 'Snippet Queue', snippets_path
          %li= link_to 'User List', users_path