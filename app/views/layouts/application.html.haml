!!!Strict
%html
  %head
    %title Refactor Me
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  %body
    #header
      %ul#navigation
        %li= link_to "main", root_path
        %li= link_to "submit new", submit_snippet_path
    #container
      - [ :error, :success, :notice ].each do |type|
        - if flash[type]
          %div{:class => type }= flash[type]

      = yield
    #footer
      %ul#admin
        %li= link_to 'Snippet Queue', snippets_path
        %li= link_to 'User List', users_path