-form_tag sessions_url, :method => :post, :html => {:class => "login" } do 

  %h1 Login
  %p{:style => 'color: #999;font-size: 14px;'} 
    = "New User? #{link_to 'Go ahead and register.', signup_url}"
  
  = error_message_on warden, :login
  %br
  = label_tag :username
  = text_field_tag :username
  %br
  = label_tag :password
  = password_field_tag :password
  %br
  %button{:type => 'submit'}
    Login
  %ul.forgot_password
    %li 
      |
    %li
      -#= link_to "Forgot Password?", new_password_reset_path

    
