.votes
  = render :partial => 'votes/vote', :locals => { :refactor => refactor }


.author
  = refactor.user.login
  .avatar= gravatar_for refactor.user
  
.code
  - if refactor.gist_id.blank?
    =h refactor.code
  - else
    %script{ :src => refactor.gist_url + ".js" }
    .hidden=h refactor.code

.timestamp
  = refactor.created_at

.links
  = link_to "Send to Gist", send_to_gist_snippet_refactor_path(@snippet, refactor), :class => 'gist'
  %a{:href => "#", :class => 'fork'} Fork

.hidden= render :partial => 'refactors/inline_form', :locals => {:code => refactor.code}
%hr