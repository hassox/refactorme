.page_title
  %h1 Update Account

= render :partial => 'layouts/admin_panel' if current_user && current_user.is_admin?

- form_for @user, :url => account_path do |f| 
  = f.error_messages
  %br
  
  %h5 Required Fields
  = f.label :login
  = f.text_field :login 
  %br
  = f.label :email
  = f.text_field :email
  %br
  
  %h5 Update Password
  = f.label :password, "New Password"
  = f.password_field :password 
  %br
  = f.label :password_confirmation, "Confirm Password"
  = f.password_field :password_confirmation
  
  %h5 Advanced Settings
  %p 
    Automatically submit your GitHub commits to RefactorMe.
    %a{:href => "/api"} See our API 
    for more details.
  %br
  = f.label :github_username, "GitHub Username"
  = f.text_field :github_username
  / %br
  / = f.label :github_api_key, "GitHub API Key"
  / = f.text_field :github_api_key
  %button{:type => 'submit'}
    Update Account
